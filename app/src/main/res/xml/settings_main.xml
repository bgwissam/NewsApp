<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/settings_tittle">

    <ListPreference
        android:defaultValue="@string/settings_min_section_default"
        android:entries="@array/settings_order_by_label"
        android:entryValues="@array/settings_order_by_value"
        android:key="@string/settings_min_section_key"
        android:title="@string/settings_min_section_label" />
    <EditTextPreference
        android:defaultValue="@string/settings_date_default"
        android:inputType="numberDecimal"
        android:key="@string/settings_date_key"
        android:selectAllOnFocus="true"
        android:title="@string/setting_date_label" />
</PreferenceScreen>